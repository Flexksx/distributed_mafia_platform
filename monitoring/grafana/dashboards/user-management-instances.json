{
  "dashboard": {
    "id": null,
    "title": "User Management Service - Instance Level Monitoring",
    "tags": ["mafia", "user-management", "instances"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Service Instances Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"user-management\"}",
            "legendFormat": "{{instance}} - {{instance_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate by Instance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"user-management\"}[5m])",
            "legendFormat": "{{instance}} - {{method}} {{route}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 3,
        "title": "HTTP Request Duration by Instance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"user-management\"}[5m]))",
            "legendFormat": "{{instance}} - 95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"user-management\"}[5m]))",
            "legendFormat": "{{instance}} - 50th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "HTTP Request Errors by Instance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_request_errors_total{job=\"user-management\"}[5m])",
            "legendFormat": "{{instance}} - {{method}} {{route}} {{error_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Database Operations by Instance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(database_operations_total{job=\"user-management\"}[5m])",
            "legendFormat": "{{instance}} - {{operation}} {{table}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Database Operation Duration by Instance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(database_operation_duration_seconds_bucket{job=\"user-management\"}[5m]))",
            "legendFormat": "{{instance}} - 95th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "Active Connections by Instance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "active_connections{job=\"user-management\"}",
            "legendFormat": "{{instance}} - Active Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "Service Uptime by Instance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "service_uptime_seconds{job=\"user-management\"}",
            "legendFormat": "{{instance}} - Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 9,
        "title": "Request Distribution by Status Code",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"user-management\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      },
      {
        "id": 10,
        "title": "Load Distribution Across Instances",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"user-management\"}[5m])",
            "legendFormat": "{{instance}} - Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 40
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"user-management\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    }
  }
}
